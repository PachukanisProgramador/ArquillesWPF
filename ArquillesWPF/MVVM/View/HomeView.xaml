<UserControl x:Class="ArquillesWPF.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArquillesWPF.MVVM.View"
             xmlns:viewModel="clr-namespace:ArquillesWPF.MVVM.ViewModel"
             xmlns:ftp="clr-namespace:ArquillesWPF.Core"
             mc:Ignorable="d" 
             d:DesignHeight="570"
             d:DesignWidth="860"
             MinWidth="860"
             MinHeight="570"
             Background="#0E0A0A"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.DataContext>
        <viewModel:HomeViewModel/>
    </UserControl.DataContext>
    <Grid Width="Auto"
          Height="Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Transferência Simples"
                   Foreground="#e5e5e5"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="30"/>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="30,0,0,00">

            <TextBox Style="{StaticResource TextBoxTheme}"
                             Width="150"
                             Height="40"
                             Text="{Binding TextoEndereco}"
                             Grid.Column="0"
                             Margin="0,0,0,0"
                     x:Name="textBoxEndereco"/>
            <TextBox Style="{StaticResource TextBoxTheme}"
                             Width="120"
                             Height="40"
                             Text="Usuário"
                             Grid.Column="1"
                             Margin="20,0,0,0"/>
            <TextBox Style="{StaticResource TextBoxTheme}"
                             Width="120"
                             Height="40"
                             Text="Senha"
                             Grid.Column="2"
                             Margin="20,0,50,0"
                     Name="Senha"/>
            <Button Background="#00961E"
                                    Content="Conectar"
                                    Height="30"
                                    Width="100"
                                    Margin="0,0,0,0"
                                    Style="{StaticResource ConnectButtonTheme}"
                    Command="{Binding IniciarFtp}"/>

        </StackPanel>
        <Border Grid.Row="2"
                        BorderBrush="#DCEBF5"
                        BorderThickness=".10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                Margin="30,30,30,0"
                Background="LightGray">

            <StackPanel>
                <TextBlock Text="Histórico"
                                   Foreground="#0e0e0e"
                                   HorizontalAlignment="Center"
                                   FontSize="25"
                           Margin="0,5,0,10"/>
                <TextBlock Width="800"
                           Height="100"
                           ScrollViewer.CanContentScroll="True"
                           Background="Black"
                           Foreground="Green"
                           FontSize="18"
                           Padding="30,2,0,30"
                           Text="{Binding TextoCaixaHistorico }"/>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="4"
                    Margin="100">
            <Button Width="200"
                    Height="80"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Content="Subir arquivos"
                    FontSize="20"
                    Command="{Binding SubirArquivos}"
                    Style="{StaticResource UploadButtonTheme}"/>
        </StackPanel>
    </Grid>
</UserControl>
