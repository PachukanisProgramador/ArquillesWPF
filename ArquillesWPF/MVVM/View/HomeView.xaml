<UserControl x:Class="ArquillesWPF.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArquillesWPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="Border">
                <Setter Property="Width" Value="385"/>
                <Setter Property="Height" Value="340"/>
            </Style>
        </StackPanel.Resources>
        
        <TextBlock Text="Transferência Simples"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,30"/>

        <StackPanel Orientation="Horizontal">
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,3">
                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                        <GradientStop Color="Pink" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="20"
                                       RadiusY="20"
                                       Rect="0,0,380,340"/>
                </Border.Clip>
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Seus arquivos"
                                   Foreground="#212427"
                                   Margin="10,10,10,10"
                                   HorizontalAlignment="Center"
                                   FontSize="25"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Margin="10,0,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,3">
                        <GradientStop Color="#3aa0ff" Offset="0.0"/>
                        <GradientStop Color="Pink" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="20"
                                       RadiusY="20"
                                       Rect="0,0,380,340"/>
                </Border.Clip>
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Conexão"
                                   Foreground="#212427"
                                   Margin="10,10,10,10"
                                   HorizontalAlignment="Center"
                                   FontSize="25"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
